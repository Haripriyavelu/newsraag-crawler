# Azure Application Insights Configuration
# Set this to enable Azure Application Insights monitoring
APPINSIGHTS_INSTRUMENTATIONKEY=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Azure Blob Storage Configuration
AZ_ACCOUNT_NAME=your_storage_account_name
AZ_BLOB_ACCESS_KEY=your_storage_access_key
AZ_CONTAINER_NAME=your_container_name

# Qdrant Configuration
QDRANT_URL=https://your-qdrant-instance.com
QDRANT_API_KEY=your_api_key
QDRANT_COLLECTION_NAME=news_articles

# Azure OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://your-openai-endpoint.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=embedding-model-name
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Optional Redis Configuration (for duplicate detection)
# REDIS_URL=redis://username:password@your-redis-host:6379

# Optional Azure App Service Configuration
# PORT=8000
