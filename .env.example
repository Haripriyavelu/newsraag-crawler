QDRANT_URL=your-qdrant-url.com
QDRANT_API_KEY=your-qdrant-api-key       
VECTOR_BACKEND=qdrant
QDRANT_COLLECTION_NAME=news_articles
ANTHROPIC_API_KEY=your-anthropic-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key


# Crawler Configuration
CRAWLER_INTERVAL=3600  # 1 hour
MAX_ARTICLES_PER_SOURCE=100

# API Configuration
PORT=9622
API_HOST=0.0.0.0
API_PORT=9621


DEBUG=false                       # Enable debug logging (true/false)
LOG_LEVEL=INFO
DEFAULT_SUBTASKS=3                # Default number of subtasks when expanding
DEFAULT_PRIORITY=medium           # Default priority for generated tasks (high, medium, low)
PROJECT_NAME=newsragnarok      # Project name for tasks.json metadata


# Update these in your .env file:
OPENAI_BASE_URL=https://your-azure-openai-endpoint.openai.azure.com
OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=embedding-deployment-name
AZURE_OPENAI_EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSION=3072


# Enable translation specifically for the Kabutan crawler
KABUTAN_TRANSLATE_ENABLED=true

# Optional: Specify a different model (defaults to gpt-4o-mini if unset)
# OPENAI_MODEL=gpt-4o

# Optional: Specify a different base URL (defaults to OpenAI's if unset)
# OPENAI_BASE_URL=https://your-proxy-or-alternative-url.com/v1
#LIGHTRAG_API_URL=http://localhost:9621
LIGHTRAG_API_URL=http://lightrag:9621
LIGHTRAG_API_KEY=helloworld
WHITELIST_PATHS=/health,/api/*
API_KEY_HEADER_VALUE=helloworld


### API-Key to access LightRAG Server API
AZ_ACCOUNT_NAME=your-azure-account-name
AZ_BLOB_ACCESS_KEY=your-azure-blob-access-key
AZ_CONTAINER_NAME=your-container-name